apigeni.kipasangen.my.id {
    reverse_proxy blog_api:80
}

# Domain for your frontend (React app)
http://dashboard.kipasangen.my.id {
    root * /srv
    file_server

    # Redirect all unknown routes to index.html (for React Router)
    try_files {path} /index.html

    # Enable Gzip compression for better performance
    encode gzip zstd

    # Log requests (optional, for debugging)
    log {
        output stdout
        format json
    }

    # Optional: Disable automatic HTTPS
    tls off
}
